<!DOCTYPE html>
<html lang="en">
<%- include('components/head.ejs') -%>

    <body>
        <!-- Start Preloader -->
        <div class="cs_perloader">
            <div class="cs_perloader_in">
                <svg class="cs_cart_animation" role="img" aria-label="Sattiyas Preloader" viewBox="0 0 128 128"
                    width="128px" height="128px" xmlns="http://www.w3.org/2000/svg">
                    <g fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="8">
                        <g class="cs_cart_track" stroke="hsla(0,10%,10%,0.1)">
                            <polyline points="4,4 21,4 26,22 124,22 112,64 35,64 39,80 106,80" />
                            <circle cx="43" cy="111" r="13" />
                            <circle cx="102" cy="111" r="13" />
                        </g>
                        <g class="cs_cart_lines" stroke="currentColor">
                            <polyline class="cs_cart_top" points="4,4 21,4 26,22 124,22 112,64 35,64 39,80 106,80"
                                stroke-dasharray="338 338" stroke-dashoffset="-338" />
                            <g class="cs_cart_wheel_1" transform="rotate(-90,43,111)">
                                <circle class="cs_cart_wheel_stroke" cx="43" cy="111" r="13"
                                    stroke-dasharray="81.68 81.68" stroke-dashoffset="81.68" />
                            </g>
                            <g class="cs_cart_wheel_2" transform="rotate(90,102,111)">
                                <circle class="cs_cart_wheel_stroke" cx="102" cy="111" r="13"
                                    stroke-dasharray="81.68 81.68" stroke-dashoffset="81.68" />
                            </g>
                        </g>
                    </g>
                </svg>
                <span class="cs_perloader_text">Welcome to Sattiyas. Loading...</span>
            </div>
        </div>
        <!-- End Preloader -->
        <!-- Start header -->
        <%- include('./components/header') -%>
            <div class="cs_height_140 cs_height_lg_80"></div>
            <!-- End header -->
            <!-- Start Cart Page Heading -->
            <section>
                <div class="container">
                    <div class="cs_height_80 cs_height_lg_60"></div>
                    <div class="cs_shop_page_heading text-center">
                        <h1 class="cs_fs_50 cs_bold">Shopping Cart</h1>
                        <div class="cs_shop_breadcamp cs_medium">
                            <a href="/">Home</a>
                            <svg width="17" height="8" viewBox="0 0 17 8" fill="none"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M16.3536 4.35355C16.5488 4.15829 16.5488 3.84171 16.3536 3.64645L13.1716 0.464467C12.9763 0.269205 12.6597 0.269205 12.4645 0.464467C12.2692 0.659729 12.2692 0.976312 12.4645 1.17157L15.2929 4L12.4645 6.82843C12.2692 7.02369 12.2692 7.34027 12.4645 7.53553C12.6597 7.7308 12.9763 7.7308 13.1716 7.53554L16.3536 4.35355ZM-4.37114e-08 4.5L16 4.5L16 3.5L4.37114e-08 3.5L-4.37114e-08 4.5Z"
                                    fill="#5E5E5E" />
                            </svg>
                            <span>Cart</span>
                        </div>
                    </div>
                    <div class="cs_height_80 cs_height_lg_60"></div>
                </div>
            </section>
            <!-- End Cart Page Heading -->
            <!-- Start Cart -->
            <div class="container">
                <div class="table-responsive">
                    <table class="cs_cart_table cs_size1">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Stock Status</th>
                                <th>Remove</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="cs_cart_table_media">
                                        <img src="img/cart-product-1.jpeg" alt="Thumb">
                                        <h3>Pure black cotton men T-shirt</h3>
                                    </div>
                                </td>
                                <td>$300.00</td>
                                <td>In stock</td>
                                <td class="text-center">
                                    <button class="cs_cart-table-close"><i class="fa-solid fa-xmark"></i></button>
                                </td>
                                <td class="text-end"><a href="cart"
                                        class="cs_btn cs_style_1 cs_type_1 cs_fs_16 cs_medium">Add to Cart</a></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="cs_cart_table_media">
                                        <img src="img/cart-product-2.jpeg" alt="Thumb">
                                        <h3>Satin silk sleeping were</h3>
                                    </div>
                                </td>
                                <td>$300.00</td>
                                <td>In stock</td>
                                <td class="text-center">
                                    <button class="cs_cart-table-close"><i class="fa-solid fa-xmark"></i></button>
                                </td>
                                <td class="text-end"><a href="cart"
                                        class="cs_btn cs_style_1 cs_type_1 cs_fs_16 cs_medium">Add to Cart</a></td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="cs_cart_table_media">
                                        <img src="img/cart-product-3.jpeg" alt="Thumb">
                                        <h3>Top gorgeous woman dress</h3>
                                    </div>
                                </td>
                                <td>$300.00</td>
                                <td>In stock</td>
                                <td class="text-center">
                                    <button class="cs_cart-table-close"><i class="fa-solid fa-xmark"></i></button>
                                </td>
                                <td class="text-end"><a href="cart"
                                        class="cs_btn cs_style_1 cs_type_1 cs_fs_16 cs_medium">Add to Cart</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- End Cart -->
            <div class="cs_height_140 cs_height_lg_80"></div>
            <hr>
            <!-- Start footer -->
            <%- include('components/footer.ejs') -%>
                <!-- End footer -->
                <!-- Start scroll up button -->
                <div class="cs_scrollup_btn" id="cs_scroll_btn">
                    <i class="fa-solid fa-arrow-up"></i>
                </div>
                <!-- End scroll up button -->
                <!-- All script files -->
                <script src="js/jquery-3.6.0.min.js"></script>
                <script src="js/jquery.slick.min.js"></script>
                <script src="js/isotope.pkg.min.js"></script>
                <script src="js/jquery-ui.min.js"></script>
                <script src="js/animated-headline.js"></script>
                <script src="js/main.js"></script>
    </body>

</html>